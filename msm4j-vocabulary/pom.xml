                                -e TTL \
                                --package uk.ac.open.kmi.msm4j.vocabulary \
                                -o ${project.build.directory}/generated-sources/java \
                                -n HTTP_STATUS_CODES \
                                --owl \
                                --inference
                            </commandlineArgs>
                        </configuration>
                    </execution>
                    <execution>
                        <id>HTTP_METHODS</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>jena.schemagen</mainClass>
