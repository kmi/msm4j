        {
            "path": "/Data/Site/SiteCode={SiteCode}/StartDate={StartDate}/EndDate={EndDate}/Json",
            "produces": [
                "application/json"
            ],
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get Raw Data in Json",
                    "notes": "This returns raw data based on 'SiteCode', 'StartDate', 'EndDate'. Default time period is 'hourly'. Data returned in JSON format",
                    "nickname": "getRawDataJson",
                    "type": "Map",
                    "authorizations": {},
                    "parameters": [
                        {
                            "name": "SiteCode",
                            "description": "Site code for the location desired.",
                            "dataType": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "StartDate",
                            "description": "Start date for retrieving the data.",
                            "dataType": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "EndDate",
                            "description": "End date for retrieving the data.",
                            "dataType": "string",
                            "paramType": "path"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Invalid ID supplied"
                        },
                        {
                            "code": 404,
                            "message": "Order not found"
                        }
                    ]
                }
            ]
        },
